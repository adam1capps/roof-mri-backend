# SendGrid API key (starts with SG.)
SENDGRID_API_KEY=SG.your_key_here

# PostgreSQL connection string from Render
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Frontend URL (your Netlify site)
PROPOSAL_BASE_URL=https://roof-mri.netlify.app

# Comma-separated list of allowed origins for CORS (your frontend domains)
ALLOWED_ORIGINS=https://roof-mri.netlify.app,https://roof-mri.com

# Admin API key for protecting sensitive endpoints (generate a strong random string)
ADMIN_API_KEY=your_strong_random_key_here

# Stripe secret key (starts with sk_live_ or sk_test_)
STRIPE_SECRET_KEY=sk_test_your_key_here

# Stripe webhook signing secret (starts with whsec_) â€“ get this from the Stripe dashboard
# after creating a webhook endpoint pointing to https://your-render-url.onrender.com/api/stripe-webhook
STRIPE_WEBHOOK_SECRET=whsec_your_secret_here
